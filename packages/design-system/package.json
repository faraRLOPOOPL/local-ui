{
  "name": "@realist-ui/design-system",
  "version": "0.1.0",
  "description": "Design system with tokens, fonts, and assets for local-ui",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tokens": "./src/tokens.css",
    "./tokens.css": "./src/tokens.css",
    "./fonts.css": "./src/fonts/fonts.css",
    "./tailwind": "./tailwind.preset.cjs",
    "./tailwind-preset": "./tailwind.preset.cjs",
    "./icons": {
      "import": "./dist/icons.js",
      "types": "./dist/icons.d.ts"
    }
  },
  "files": [
    "dist",
    "src/tokens.css",
    "src/fonts",
    "src/assets",
    "tailwind.preset.cjs"
  ],
  "scripts": {
    "build": "vite build",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0",
    "@types/react": "^18.0.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.7"
  },
  "keywords": [
    "design-system",
    "tokens",
    "fonts",
    "assets"
  ]
}
